import 'package:flutter/material.dart';
import 'dart:math';

void main() {
  runApp(const ValentineApp());
}

class ValentineApp extends StatelessWidget {
  const ValentineApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'üíù Valentine Invitation',
      theme: ThemeData(
        primarySwatch: Colors.pink,
        fontFamily: 'Inter',
        useMaterial3: true,
      ),
      debugShowCheckedModeBanner: false,
      home: const ValentinePage(),
    );
  }
}

class ValentinePage extends StatefulWidget {
  const ValentinePage({super.key});

  @override
  State<ValentinePage> createState() => _ValentinePageState();
}

class _ValentinePageState extends State<ValentinePage> 
    with SingleTickerProviderStateMixin {
  // State variables
  String? _answer;
  int _noClicks = 0;
  Offset _noButtonOffset = Offset.zero;
  final Random _random = Random();
  bool _isYesHovering = false;
  bool _isNoHovering = false;
  double _yesScale = 1.0;
  List<Confetti> _confetti = [];
  bool _showConfetti = false;
  
  // Messages
  final List<String> _noMessages = [
    "No", "Are you sure?", "Really sure?", "Think again!", 
    "Pretty please?", "Last chance!", "Don't do this ü•∫", 
    "I'll cry...", "You're breaking my heart üíî", "YES I WILL! ‚ù§Ô∏è"
  ];
  
  // Hearts data
  final List<Heart> _hearts = [];
  late AnimationController _heartController;

  @override
  void initState() {
    super.initState();
    
    // Initialize hearts
    for (int i = 0; i < 20; i++) {
      _hearts.add(Heart(
        x: _random.nextDouble(),
        y: _random.nextDouble(),
        size: 10 + _random.nextDouble() * 20,
        speed: 0.3 + _random.nextDouble() * 0.7,
        color: [
          Colors.pink.withOpacity(0.15),
          Colors.red.withOpacity(0.15),
          Colors.pinkAccent.withOpacity(0.15),
          Colors.redAccent.withOpacity(0.15),
        ][_random.nextInt(4)],
      ));
    }
    
    _heartController = AnimationController(
      duration: const Duration(seconds: 20),
      vsync: this,
    )..repeat();
  }

  @override
  void dispose() {
    _heartController.dispose();
    super.dispose();
  }

  void _handleYes() {
    if (_answer != null) return;
    
    setState(() {
      _answer = "yes";
      _showConfetti = true;
      
      // Create confetti
      for (int i = 0; i < 50; i++) {
        _confetti.add(Confetti(
          x: _random.nextDouble() * 2 - 1,
          y = _random.nextDouble(),
          size: 4 + _random.nextDouble() * 8,
          color: [
            Colors.pink,
            Colors.red,
            Colors.pinkAccent,
            Colors.redAccent,
          ][_random.nextInt(4)],
          speed: 1 + _random.nextDouble() * 2,
          angle: _random.nextDouble() * 2 * pi,
        ));
      }
    });
  }

  void _handleNo() {
    if (_answer != null) return;
    
    setState(() {
      if (_noClicks < _noMessages.length - 1) {
        _noClicks++;
        _noButtonOffset = Offset(
          (_random.nextDouble() - 0.5) * 100,
          (_random.nextDouble() - 0.5) * 50,
        );
      } else {
        _handleYes();
      }
    });
  }

  void _reset() {
    setState(() {
      _answer = null;
      _noClicks = 0;
      _noButtonOffset = Offset.zero;
      _confetti.clear();
      _showConfetti = false;
    });
  }

  @override
  Widget build(BuildContext context) {
    final isMobile = MediaQuery.of(context).size.width < 600;
    
    return Scaffold(
      body: Container(
        decoration: const BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topLeft,
            end: Alignment.bottomRight,
            colors: [
              Color(0xFFFFF0F5),
              Color(0xFFFFE4E9),
              Color(0xFFFFD6E0),
              Colors.white,
            ],
          ),
        ),
        child: Stack(
          children: [
            // Background hearts
            AnimatedBuilder(
              animation: _heartController,
              builder: (context, child) {
                return CustomPaint(
                  painter: HeartPainter(_hearts, _heartController.value),
                );
              },
            ),
            
            // Confetti
            if (_showConfetti)
              AnimatedBuilder(
                animation: _heartController,
                builder: (context, child) {
                  return CustomPaint(
                    painter: ConfettiPainter(_confetti, _heartController.value),
                  );
                },
              ),
            
            // Main content
            SafeArea(
              child: Center(
                child: SingleChildScrollView(
                  padding: EdgeInsets.all(isMobile ? 16 : 24),
                  child: Container(
                    constraints: BoxConstraints(maxWidth: isMobile ? 400 : 500),
                    child: Card(
                      elevation: 8,
                      shape: RoundedRectangleBorder(
                        borderRadius: BorderRadius.circular(24),
                      ),
                      child: Padding(
                        padding: EdgeInsets.all(isMobile ? 20 : 32),
                        child: _answer == "yes" 
                            ? _buildSuccessView() 
                            : _buildInvitationView(),
                      ),
                    ),
                  ),
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildSuccessView() {
    return Column(
      mainAxisSize: MainAxisSize.min,
      children: [
        // Animated heart
        AnimatedContainer(
          duration: const Duration(milliseconds: 500),
          curve: Curves.elasticOut,
          transform: Matrix4.identity()..scale(1.3),
          child: const Icon(
            Icons.favorite,
            size: 64,
            color: Colors.pink,
          ),
        ),
        const SizedBox(height: 24),
        
        // Message
        const Text(
          "You made my day! üíï",
          style: TextStyle(
            fontSize: 28,
            fontWeight: FontWeight.w700,
            color: Colors.pink,
          ),
          textAlign: TextAlign.center,
        ),
        const SizedBox(height: 16),
        
        const Text(
          "Can't wait to see you on Valentine's Day!\n"
          "Get ready for an amazing time! ‚ú®",
          style: TextStyle(
            fontSize: 16,
            color: Colors.black54,
            height: 1.5,
          ),
          textAlign: TextAlign.center,
        ),
        const SizedBox(height: 32),
        
        // Buttons
        Wrap(
          spacing: 16,
          runSpacing: 16,
          alignment: WrapAlignment.center,
          children: [
            ElevatedButton.icon(
              onPressed: () {
                ScaffoldMessenger.of(context).showSnackBar(
                  const SnackBar(
                    content: Text('Copied invitation link! üíù'),
                    duration: Duration(seconds: 2),
                  ),
                );
              },
              icon: const Icon(Icons.link, size: 20),
              label: const Text('Copy Link'),
              style: ElevatedButton.styleFrom(
                backgroundColor: Colors.pink,
                foregroundColor: Colors.white,
                padding: const EdgeInsets.symmetric(horizontal: 24, vertical: 14),
                shape: RoundedRectangleBorder(
                  borderRadius: BorderRadius.circular(20),
                ),
              ),
            ),
            
            OutlinedButton.icon(
              onPressed: _reset,
              icon: const Icon(Icons.refresh, size: 20),
              label: const Text('Send Again'),
              style: OutlinedButton.styleFrom(
                padding: const EdgeInsets.symmetric(horizontal: 24, vertical: 14),
                shape: RoundedRectangleBorder(
                  borderRadius: BorderRadius.circular(20),
                ),
                side: const BorderSide(color: Colors.pink),
              ),
            ),
          ],
        ),
        
        const SizedBox(height: 20),
        const Text(
          'Made with ‚ù§Ô∏è ‚Ä¢ Deployed on GitHub',
          style: TextStyle(
            fontSize: 12,
            color: Colors.grey,
          ),
        ),
      ],
    );
  }

  Widget _buildInvitationView() {
    final isMobile = MediaQuery.of(context).size.width < 400;
    
    return Column(
      mainAxisSize: MainAxisSize.min,
      children: [
        // Heart icon
        Stack(
          alignment: Alignment.center,
          children: [
            Container(
              width: 100,
              height: 100,
              decoration: BoxDecoration(
                shape: BoxShape.circle,
                gradient: RadialGradient(
                  colors: [
                    Colors.pink.withOpacity(0.2),
                    Colors.pink.withOpacity(0.05),
                  ],
                ),
              ),
            ),
            const Icon(
              Icons.favorite,
              size: 56,
              color: Colors.pink,
            ),
          ],
        ),
        const SizedBox(height: 20),
        
        // Title
        const Text(
          "VALENTINE'S INVITATION",
          style: TextStyle(
            fontSize: 14,
            letterSpacing: 3,
            color: Colors.black54,
            fontWeight: FontWeight.w600,
          ),
        ),
        const SizedBox(height: 8),
        
        const Text(
          "Be My Valentine",
          style: TextStyle(
            fontSize: 36,
            fontWeight: FontWeight.w700,
            color: Colors.black,
            height: 1.2,
          ),
          textAlign: TextAlign.center,
        ),
        const SizedBox(height: 20),
        
        // Message
        const Text(
          "I've been searching for the perfect moment to ask...\n"
          "Will you make this Valentine's Day unforgettable?",
          style: TextStyle(
            fontSize: 16,
            color: Colors.black87,
            height: 1.6,
          ),
          textAlign: TextAlign.center,
        ),
        const SizedBox(height: 24),
        
        // Details
        Container(
          padding: const EdgeInsets.all(20),
          decoration: BoxDecoration(
            color: Colors.pink.withOpacity(0.05),
            borderRadius: BorderRadius.circular(16),
            border: Border.all(color: Colors.pink.withOpacity(0.1)),
          ),
          child: Column(
            children: [
              _buildDetailRow(Icons.calendar_today, "February 14, 2025"),
              const SizedBox(height: 12),
              _buildDetailRow(Icons.access_time, "7:00 PM"),
              const SizedBox(height: 12),
              _buildDetailRow(Icons.location_on, "A Magical Place"),
              const SizedBox(height: 12),
              _buildDetailRow(Icons.restaurant, "Romantic Dinner"),
            ],
          ),
        ),
        const SizedBox(height: 28),
        
        // Divider
        Row(
          children: [
            Expanded(child: Divider(color: Colors.grey.shade300)),
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 16),
              child: Icon(
                Icons.favorite,
                size: 16,
                color: Colors.pink.withOpacity(0.6),
              ),
            ),
            Expanded(child: Divider(color: Colors.grey.shade300)),
          ],
        ),
        const SizedBox(height: 28),
        
        // Question
        const Text(
          "Will you be my Valentine?",
          style: TextStyle(
            fontSize: 20,
            fontWeight: FontWeight.w600,
            color: Colors.black87,
          ),
        ),
        const SizedBox(height: 28),
        
        // Buttons
        isMobile
            ? Column(
                children: [
                  _buildYesButton(),
                  const SizedBox(height: 16),
                  _buildNoButton(),
                ],
              )
            : Row(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  _buildYesButton(),
                  const SizedBox(width: 24),
                  _buildNoButton(),
                ],
              ),
        
        // Hint
        if (_noClicks > 0 && _noClicks < _noMessages.length - 1)
          Padding(
            padding: const EdgeInsets.only(top: 20),
            child: Text(
              "Keep clicking 'No'... there's a surprise! üòâ",
              style: TextStyle(
                fontSize: 13,
                color: Colors.grey.shade600,
                fontStyle: FontStyle.italic,
              ),
            ),
          ),
        
        const SizedBox(height: 20),
        const Text(
          'Open Source ‚Ä¢ Built with Flutter ‚Ä¢ GitHub Ready',
          style: TextStyle(fontSize: 11, color: Colors.grey),
        ),
      ],
    );
  }

  Widget _buildDetailRow(IconData icon, String text) {
    return Row(
      mainAxisAlignment: MainAxisAlignment.center,
      children: [
        Icon(icon, size: 20, color: Colors.pink),
        const SizedBox(width: 12),
        Text(
          text,
          style: const TextStyle(
            fontSize: 16,
            color: Colors.black87,
            fontWeight: FontWeight.w500,
          ),
        ),
      ],
    );
  }

  Widget _buildYesButton() {
    return MouseRegion(
      onEnter: (_) => setState(() {
        _isYesHovering = true;
        _yesScale = 1.05;
      }),
      onExit: (_) => setState(() {
        _isYesHovering = false;
        _yesScale = 1.0;
      }),
      child: AnimatedScale(
        scale: _yesScale,
        duration: const Duration(milliseconds: 200),
        child: ElevatedButton(
          onPressed: _handleYes,
          style: ElevatedButton.styleFrom(
            backgroundColor: Colors.pink,
            foregroundColor: Colors.white,
            padding: const EdgeInsets.symmetric(horizontal: 48, vertical: 16),
            shape: RoundedRectangleBorder(
              borderRadius: BorderRadius.circular(24),
            ),
            elevation: _isYesHovering ? 8 : 4,
            shadowColor: Colors.pink.withOpacity(0.3),
          ),
          child: const Text(
            "Yes! I'd love to! ‚ô•",
            style: TextStyle(
              fontSize: 16,
              fontWeight: FontWeight.w700,
            ),
          ),
        ),
      ),
    );
  }

  Widget _buildNoButton() {
    return MouseRegion(
      onEnter: (_) => setState(() => _isNoHovering = true),
      onExit: (_) => setState(() => _isNoHovering = false),
      child: AnimatedContainer(
        duration: const Duration(milliseconds: 300),
        curve: Curves.easeOutBack,
        transform: Matrix4.translationValues(
          _noButtonOffset.dx,
          _noButtonOffset.dy,
          0,
        ),
        child: OutlinedButton(
          onPressed: _handleNo,
          style: OutlinedButton.styleFrom(
            padding: const EdgeInsets.symmetric(horizontal: 48, vertical: 16),
            shape: RoundedRectangleBorder(
              borderRadius: BorderRadius.circular(24),
            ),
            side: BorderSide(
              color: _isNoHovering ? Colors.red : Colors.grey,
              width: _isNoHovering ? 2 : 1.5,
            ),
            foregroundColor: _isNoHovering ? Colors.red : Colors.black87,
          ),
          child: Text(
            _noMessages[min(_noClicks, _noMessages.length - 1)],
            style: TextStyle(
              fontSize: 16,
              fontWeight: FontWeight.w600,
              color: _isNoHovering ? Colors.red : Colors.black87,
            ),
          ),
        ),
      ),
    );
  }
}

// ===========================================
// DATA CLASSES
// ===========================================

class Heart {
  double x;
  double y;
  double size;
  double speed;
  Color color;
  
  Heart({
    required this.x,
    required this.y,
    required this.size,
    required this.speed,
    required this.color,
  });
}

class Confetti {
  double x;
  double y;
  double size;
  Color color;
  double speed;
  double angle;
  
  Confetti({
    required this.x,
    required this.y,
    required this.size,
    required this.color,
    required this.speed,
    required this.angle,
  });
}

// ===========================================
// CUSTOM PAINTERS
// ===========================================

class HeartPainter extends CustomPainter {
  final List<Heart> hearts;
  final double time;
  
  HeartPainter(this.hearts, this.time);
  
  @override
  void paint(Canvas canvas, Size size) {
    for (var heart in hearts) {
      final progress = (time * heart.speed) % 1.0;
      final y = progress * size.height;
      final x = heart.x * size.width + sin(progress * 2 * pi) * 20;
      
      final paint = Paint()
        ..color = heart.color
        ..style = PaintingStyle.fill;
      
      // Draw heart
      _drawHeart(canvas, x, y, heart.size, paint);
    }
  }
  
  void _drawHeart(Canvas canvas, double x, double y, double size, Paint paint) {
    final path = Path();
    path.moveTo(x, y);
    path.cubicTo(x - size/2, y - size/2, x - size, y, x, y + size);
    path.cubicTo(x + size, y, x + size/2, y - size/2, x, y);
    canvas.drawPath(path, paint);
  }
  
  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => true;
}

class ConfettiPainter extends CustomPainter {
  final List<Confetti> confetti;
  final double time;
  
  ConfettiPainter(this.confetti, this.time);
  
  @override
  void paint(Canvas canvas, Size size) {
    for (var c in confetti) {
      c.y += c.speed * 0.05;
      c.x += sin(c.angle) * 0.5;
      c.angle += 0.05;
      
      final paint = Paint()
        ..color = c.color
        ..style = PaintingStyle.fill;
      
      canvas.save();
      canvas.translate(c.x * size.width/2 + size.width/2, c.y * size.height);
      canvas.rotate(c.angle);
      
      canvas.drawRect(
        Rect.fromCenter(
          center: Offset.zero,
          width: c.size,
          height: c.size/2,
        ),
        paint,
      );
      
      canvas.restore();
    }
  }
  
  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => true;
}

